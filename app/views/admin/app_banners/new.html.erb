<div class="container">
<%= form_with(model: @appBanner, url: admin_app_banners_path) do |form| %>
  <% if @appBanner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appBanner.errors.count, "error") %> prohibited this app banner from being saved:</h2>
      <ul>
        <% @appBanner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- /.row -->
    <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Basic Form Elements
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
             <div class="form-group">
                <label>Title</label>
                <%= form.text_field :title, class: "form-control", placeholder: "Enter title", required: true %>
              </div>
              <div class="form-group">
                <label>Image Url</label>
                <%= form.text_field :image_url, class: "form-control", placeholder: "Enter image url", required: true %>
              </div>
              <div class="form-group">
                <label>Action Url</label>
                <%= form.text_field :action_url, class: "form-control", placeholder: "Enter action url" %>
              </div>
              <div class="form-group">
                <label>Status</label>
                <%= form.select :status, [["Active", true], ["Inactive", false]], class: "form-control" %>
              </div>
               <div class="form-group">
                <%= form.submit "Create", class: "btn btn-primary" %>
                <%= link_to "Back", admin_app_banners_path, class: "btn btn-default" %>
              </div>
            </div>

          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
<% end %>
</div>
