<div class="container">
  <%= form_with(model: @appBanner, url: astrologies_admin_astrologies_app_banners_path, html: { class: "needs-validation", novalidate: true }) do |form| %>
    <% if @appBanner.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><%= pluralize(@appBanner.errors.count, "error") %> prohibited this app banner from being saved:</h5>
        <ul class="mb-0">
          <% @appBanner.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">App Banner Details</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter title", required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :img_url, "Image URL", class: "form-label" %>
              <%= form.text_field :img_url, class: "form-control", placeholder: "Enter image url", required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :action_url, "Action URL", class: "form-label" %>
              <%= form.text_field :action_url, class: "form-control", placeholder: "Enter action url" %>
            </div>
            <div class="mb-3">
              <%= form.label :status, class: "form-label" %>
              <%= form.select :status, [["Active", true], ["Inactive", false]], {}, { class: "form-select" } %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= form.submit "Create", class: "btn btn-primary" %>
        <%= link_to "Back", astrologies_admin_astrologies_app_banners_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
