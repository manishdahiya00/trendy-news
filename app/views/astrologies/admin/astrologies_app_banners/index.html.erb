<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">App Banners</h2>
      </div>
      <div class="new" style="margin-bottom: 15px;">
        <%= link_to "New App Banner", new_astrologies_admin_astrologies_app_banner_path, class: "btn btn-primary" %>
      </div>
      <% if @appBanners.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Image Url</th>
              <th>Action Url</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @appBanners.each do |banner| %>
              <tr>
                <td><%= banner.id %></td>
                <td><%= banner.title %></td>
                <td><img style="width:20px;" src="<%= banner.try(:img_url) %>" onerror="this.onerror=null;this.src='https://cdn.pixabay.com/photo/2014/03/24/17/21/wrong-295503_640.png';" /></td>
                <td><%= banner.action_url %></td>
                <td>
                  <% if banner.status == false %>
                    <p>❌</p>
                  <% else %>
                    <p>✔️</p>
                  <% end %>
                </td>
                <td><%= banner.created_at %></td>
                <td><%= banner.updated_at %></td>
                <td class="app-banner-action" style="display: flex;gap:5px;">
                  <%= link_to "Show", astrologies_admin_astrologies_app_banner_path(banner), class: "btn btn-primary" %>
                  <%= link_to "Edit", edit_astrologies_admin_astrologies_app_banner_path(banner), class: "btn btn-warning" %>
                  <%= button_to "Delete", astrologies_admin_astrologies_app_banner_path(banner), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @appBanners %>
      <% else %>
        <h1 class="not-found">No App Banners Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
