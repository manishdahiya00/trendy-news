<div class="container-fluid py-4">
  <% if notice %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <h2 class="mb-4">Product Details</h2>
  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Product Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Name:</strong> <span><%= @product.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Category:</strong> <span><%= @product.shopit_category.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Price:</strong> <span>â‚¹<%= @product.price %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Total Items Available:</strong> <span><%= @product.no_of_items %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <h6 class="mb-2"><strong>Description:</strong></p>
              <p><%= @product.description %></p>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card w-75">
        <img src="<%= @product.image_url %>" alt="Product Image" class="card-img-top">
      </div>
    </div>
  </div>
</div>