<%= form_for([:shopit,:admin, checkout], html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if checkout.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading"><%= pluralize(product.errors.count, "error") %> prohibited this order from being saved:</h5>
      <ul class="mb-0">
        <% checkout.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Product Details</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter user name", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter user email", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :mobile, class: "form-label" %>
            <%= f.number_field :mobile, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :order_status, class: "form-label" %>
            <%= f.select :order_status, options_for_select([["placed"], ["processing"], ["shipped"], ["completed"]], selected: true), {}, { class: "form-select" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit "Update Order", class: "btn btn-primary" %>
      <%= link_to "Cancel", shopit_admin_checkouts_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>