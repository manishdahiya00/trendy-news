<div class="container-fluid py-4">
  <% if notice %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <h2 class="mb-4">Product Details</h2>
  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Category Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Name:</strong> <span><%= @category.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Action:</strong> <span><a href="/shopit/admin/shopit_category/<%= @category.id %>/products" class="btn btn-primary mt-2">Category Products</a></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card w-75">
        <img src="<%= @category.image_url %>" alt="Product Image" class="card-img-top">
      </div>
    </div>
  </div>
</div>