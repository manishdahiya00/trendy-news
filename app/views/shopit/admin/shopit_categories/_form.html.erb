<%= form_for([:shopit,:admin, category], html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h5>
      <ul class="mb-0">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Category Details</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([["Active", true], ["Inactive", false]], selected: true), {}, { class: "form-select" } %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :image_url, class: "form-label" %>
            <%= f.url_field :image_url, class: "form-control", placeholder: "Enter category image URL", required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", shopit_admin_shopit_categories_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>