<div class="container-fluid py-4">
  <% if notice %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <h2 class="mb-4">User Details</h2>
  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Basic Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>ID:</strong> <span><%= @user.id %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Device ID:</strong> <span><%= @user.device_id %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Device Type:</strong> <span><%= @user.device_type %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Device Name:</strong> <span><%= @user.device_name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Social Type:</strong> <span><%= @user.social_type %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Social ID:</strong> <span><%= @user.social_id %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Social Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Name:</strong> <span><%= @user.social_name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Email:</strong> <span><%= @user.social_email %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Image:</strong>
              <img src="<%= @user.try(:social_img_url) %>" alt="User avatar" class="rounded-circle" width="40" height="40"
                   onerror="this.onerror=null;this.src='https://cdn.pixabay.com/photo/2014/03/24/17/21/wrong-295503_640.png';">
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Ad ID:</strong> <span><%= @user.advertising_id %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Refer Code:</strong> <span><%= @user.refer_code %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Version and UTM Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Version:</strong> <span><%= @user.version_name %> / <%= @user.version_code %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>UTM Source:</strong> <span><%= @user.utm_source %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>UTM Medium:</strong> <span><%= @user.utm_medium %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>UTM Term:</strong> <span><%= @user.utm_term %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>UTM Content:</strong> <span><%= @user.utm_content %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>UTM Campaign:</strong> <span><%= @user.utm_campaign %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Additional Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Referral URL:</strong> <span><%= @user.referrer_url %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Source IP:</strong> <span><%= @user.source_ip %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Security Token:</strong> <span><%= @user.security_token %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">App Opens</h5>
        </div>
        <div class="card-body">
          <% if @appOpens.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Source IP</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                  </tr>
                </thead>
                <tbody>
                  <% @appOpens.each do |appOpen| %>
                    <tr>
                      <td><%= appOpen.id %></td>
                      <td><%= appOpen.source_ip %></td>
                      <td><%= appOpen.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
                      <td><%= appOpen.updated_at.strftime("%d/%m/%y %I:%M %p") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="pagination">
              <%= will_paginate @appOpens, class: "page-item justify-content-center" %>
            </div>
          <% else %>
            <p class="text-muted">No App Opens Found</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>